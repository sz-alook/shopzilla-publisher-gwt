<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
  xmlns:r='urn:import:com.shopzilla.publisher.rich.client.scaffold.ui'
  xmlns:a='urn:import:com.shopzilla.publisher.rich.client.managed.ui'>
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel id="boundElementHolder" styleName='{style.outer}'>
    <div ui:field='errors' class='{style.error}'></div>
    
    <div id='title'><div class='{style.label}'>Title</div><div class='{style.value}'><g:TextBox ui:field='title'/></div></div>
    <div id='url'><div class='{style.label}'>Url</div><div class='{style.value}'><g:TextBox ui:field='url'/></div></div>
    <div id='imgUrl'><div class='{style.label}'>Img Url</div><div class='{style.value}'><g:TextBox ui:field='imgUrl'/></div></div>

    <g:Button ui:field='save'>Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
